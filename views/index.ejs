<!DOCTYPE html>
<html>

<head>
  <title></title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.rtl.min.css" />
  <link rel="stylesheet" href="/stylesheets/datatables.min.css" />

  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <h1></h1>
  <div class="row mb-30">
    <div>salam </div>
    <!-- Revenue Statistics Chart Start -->
    <div class="col-md-12 mb-30">
      <div class="box">
        <div class="box-body table-responsive">
          <div>
            <p>Count :</p>
            <p>ssss</p>
          </div>

          <table class="table table table-striped table-hover table-bordered mb-0" id="tblCodeTableList">
            <!-- Table Head Start -->
            <thead>
              <tr>
                <th>ID</th>
                <th>کد</th>
                <th>نام فارسی جدول</th>
                <th>نام انگلیسی جدول</th>
                <th>تاریخ ایجاد</th>
                <th>نام درخواست کنند</th>
              </tr>
            </thead>
            <!-- Table Head End -->
            <tbody>

            </tbody>
            <!-- Table Body Start -->

            <!-- Table Body End -->
          </table>
        </div>
      </div>
    </div>
    <!-- Revenue Statistics Chart End -->
  </div>

  <script src="/javascripts/jquery-3.3.1.min.js"></script>
  <script src="/javascripts/datatables.min.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>

  <script>
    $(document).ready(function () {
      $("#tblCodeTableList").DataTable({
        processing: true,
        serverSide: true,
        serverMethod: "get",
        ajax: {
          url: "./get_data",
        },
        searching: true,
        ordering: true,
        responsive: true,
        columns: [
          { data: "id", name: 'id' },
          {
            data: "code", name: 'code',
            mData: 'code',
            mRender: function (data, type, full) {
              if (data % 2 == 0) {
                return '<span class ="badge badge-primary">data</span>'
              }
              else {
                return '<span class ="badge badge-danger">${data}</span>'
              }
            }
          },
          { data: "fa_TableName", name: 'fa_TableName' },
          { data: "en_TableName", name: 'en_TableName' },
          { data: "createdAt", name: 'createdAt' },
          { data: "creator", name: 'creator' },
        ],
        language: {
          search: "جستجوی داده‌های جدول ...:",
          processing: "در حال بارگذاری داده از بانک اطلاعاتی ...",
        },
      });
    });
  </script>
</body>

</html>